<theme>
    <formatVersion>4</formatVersion>
    <include>./../common.xml</include>

	<view name="system">
	<!-- System Specific Images -->
		<image name="logo">
			<path>./logo.svg</path>
        </image>

        <image name="mascot" extra="true">
			<path>./mascot.png</path>
		</image>

        <image name="system" extra="true">
			<path>./system.png</path>
		</image>
	</view>

    <view name="detailed, video">
		<image name="logo">
			<path>./logo.svg</path>
		</image>
        <image name="system" extra="true">
			<path>./system.png</path>
		</image>
	</view>
    <view name="basic">
	<!-- System Specific Images -->
		<image name="logo">
			<path>./logo.svg</path>
		</image>
		<image name="overlay" extra="true">
			<path>./controller.svg</path>
		</image>
	</view>
</theme>
