<theme>
    <formatVersion>4</formatVersion>

<!-- Game View - All -->
    <view name="system, basic, detailed, video, grid">
	<!-- Page Layout -->
        <image name="system-background" extra="true">
            <path>./../images/cygnusdg.png</path>
        </image>
        <image name="background">
            <path>./../images/cygnusdg.png</path>
        </image>
        <helpsystem name="help">
            <textColor>00D100</textColor>
            <iconColor>00D100</iconColor>
        </helpsystem>
        <text name="systemInfo">
            <backgroundColor>00000000</backgroundColor>
            <color>00D100</color>
        </text>
		<image name="top" extra="true">
			<color>000A00</color>
		</image>

		<image name="top-highlight" extra="true">
			<color>000A00</color>
		</image>

		<image name="bottom" extra="true">
			<color>000A00</color>
		</image>

		<image name="bottom-highlight" extra="true">
			<color>000A00</color>
		</image>


	<!-- System Specific Images -->
		<image name="logo">
		</image>

	<!-- Game List -->
		<image name="gamelist-matte" extra="true">
			<color>000A00AA</color>
		</image>
		<image name="gamelist-mattes" extra="true">
			<color>000A00AA</color>
		</image>
		<image name="gamelist-matteh" extra="true">
			<color>00D100AA</color>
		</image>

		<textlist name="gamelist">
			<primaryColor>00D100</primaryColor>
			<secondaryColor>00D10080</secondaryColor>
			<selectorColor>34FF31</selectorColor>
			<selectedColor>000A00</selectedColor>
		</textlist>



	</view>


<!-- Game View - Basic -->
	<view name="basic">
		<image name="overlay" extra="true">
			<color>34FF3180</color>
		</image>
	</view>


<!-- Game View - Detailed -->
	<view name="detailed, video, grid">

	<!-- Metadata -->
        <datetime name="md_lastplayed">
			<color>000A00</color>
		</datetime>
    	<text name="md_lbl_players">
			<color>000A00</color>
		</text>
        <text name="md_players">
			<color>000A00</color>
		</text>
        <text name="md_genre, md_developer">
			<color>00D100</color>
		</text>
        <datetime name="md_releasedate">
			<color>00D100</color>
		</datetime>
        <image name="md_hidden, md_kidgame, md_favorite">
            <color>00D100</color>
        </image>


	<!-- Description -->
		<image name="description-mattes" extra="true">
			<color>000A00AA</color>
		</image>
		<image name="description-matteh" extra="true">
			<color>00D100AA</color>
		</image>
		<image name="description-matte" extra="true">
			<color>000A00AA</color>
		</image>
		<text name="md_description">
			<color>00D100</color>
		</text>
	</view>

</theme>
